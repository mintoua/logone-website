{% extends 'baseB.html.twig' %}


{% block content %}
	<!-- Page Wrapper -->
	<div
		id="wrapper">

		<!-- Sidebar -->
		{{include('include/backoffice/sidebar.html.twig')}}
		<!-- End of Sidebar -->

		<!-- Content Wrapper -->
			<div
			id="content-wrapper" class="d-flex flex-column"> <!-- Main Content -->
			<div
				id="content">

				<!-- Topbar -->
				{{include('include/backoffice/navbar.html.twig')}}
				<!-- End of Topbar -->

				<!-- Begin Page Content -->
					<div class="container-fluid"> <h1>ArticleBlog index</h1>

					<table class="table">
						<thead>
							<tr>
								<th>Titre</th>
								<th>Contenue</th>
								<th>Image</th>
								<th>UpdatedAt</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for article_blog in article_blogs %}
								<tr>
									<td>{{ article_blog.titre }}</td>
									<td>{{ article_blog.contenue }}</td>
									<td><img src="{{ asset('/images/articles/'~article_blog.image) }}" alt="" width="45" height="30"></td>
									<td>{{ article_blog.updatedAt ? article_blog.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
									<td>
										<a href="{{ path('app_article_blog_show', {'id': article_blog.id}) }}">show</a>
										<a href="{{ path('app_article_blog_edit', {'id': article_blog.id}) }}">edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="6">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>

					<a href="{{ path('app_article_blog_new') }}">Create new</a>
				</div>
				<!-- /.container-fluid -->

			</div>
			<!-- End of Main Content -->

			<!-- Footer -->
			{{include('include/backoffice/footer.html.twig')}}
			<!-- End of Footer -->

		</div>
		<!-- End of Content Wrapper -->

	</div>
	<!-- End of Page Wrapper -->
{% endblock %}
